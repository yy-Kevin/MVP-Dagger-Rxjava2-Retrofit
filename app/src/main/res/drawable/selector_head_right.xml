<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"><layer-list>

            <!-- 连框颜色值 -->
            <item><shape>
                    <solid android:color="@color/transparent" />
                </shape></item>
            <!-- 主体背景颜色值 -->
            <item android:left="-1dp"><shape>
                    <solid android:color="@color/transparent" />

                    <corners android:bottomRightRadius="2dp" android:topRightRadius="2dp" />

                    <stroke android:width="1dp" android:color="@color/bg_main_blue_color" />
                </shape></item>
        </layer-list></item>
    <item android:state_checked="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/bg_main_blue_color" />
                    <corners android:bottomRightRadius="2dp" android:topRightRadius="2dp" />
                </shape></item>
            <!-- 主体背景颜色值 -->
            <item android:left="-1dp"><shape>
                    <solid android:color="@color/transparent" />

                    <corners android:bottomRightRadius="2dp" android:topRightRadius="2dp" />

                    <stroke android:width="1dp" android:color="@color/bg_main_blue_color" />
                </shape></item>
        </layer-list></item>

</selector>