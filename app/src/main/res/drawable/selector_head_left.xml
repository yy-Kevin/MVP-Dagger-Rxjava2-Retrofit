<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"><shape>
            <solid android:color="@color/transparent" />

            <stroke android:width="1dp" android:color="@color/bg_main_blue_color" />

            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />
        </shape>
        
        </item>
<item android:state_checked="true"><shape>
            <solid android:color="@color/bg_main_blue_color" />

            <stroke android:width="1dp" android:color="@color/bg_main_blue_color" />

            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />
        </shape>
        
        </item>
</selector>